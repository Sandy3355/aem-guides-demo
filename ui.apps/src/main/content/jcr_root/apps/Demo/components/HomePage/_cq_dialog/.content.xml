<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Homepage"
    sling:resourceType="cq/gui/components/authoring/dialog">
    
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        
        <items jcr:primaryType="nt:unstructured">
        
            <!-- Banner Section -->
            <banner
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <bannerTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Banner Title"
                        name="./bannerTitle"
                        required="{Boolean}true"/>
                    <bannerSubtitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Banner Subtitle"
                        name="./bannerSubtitle"
                        required="{Boolean}true"/>
                    <bannerImage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldLabel="Banner Image"
                        name="./bannerImage"
                        required="{Boolean}true"/>
                </items>
            </banner>
            
            <!-- Featured Courses Section -->
            <featuredCourses
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <courseTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        fieldLabel="Featured Course Title">
                        <items jcr:primaryType="nt:unstructured">
                            <!-- Course Name Field -->
                            <courseName
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Course Name"
                                name="./courseName"
                                required="{Boolean}true"/>
                            <!-- Course Image Field -->
                            <courseImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="Course Image"
                                name="./courseImage"
                                required="{Boolean}true"/>
                            <!-- Course Link Field -->
                            <courseLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Course Link"
                                name="./courseLink"
                                required="{Boolean}true"/>
                        </items>
                    </courseTitle>
                </items>
            </featuredCourses>


            
            <!-- Course Categories Section -->
            <courseCategories
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <categoryTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        fieldLabel="Course Categories Title">
                        <items jcr:primaryType="nt:unstructured">
                            <!-- Category Name Field -->
                            <categoryName
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Category Name"
                                name="./categoryName"
                                required="{Boolean}true"/>
                            <!-- Category Image Field -->
                            <categoryImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="Category Image"
                                name="./categoryImage"
                                required="{Boolean}true"/>
                            <!-- Category Link Field -->
                            <categoryLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Category Link"
                                name="./categoryLink"
                                required="{Boolean}true"/>
                        </items>
                    </categoryTitle>
                </items>
            </courseCategories>


            
            <!-- Testimonials Section -->
            <testimonials
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">

                    <!-- Name Field -->
                    <name
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Name"
                        name="./name"
                        required="{Boolean}true" />
                    <!-- Quote Field -->
                    <quote
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        fieldLabel="Quote"
                        name="./quote"
                        required="{Boolean}true" />

                    <!-- Photo Field -->
                    <photo
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                        fieldLabel="Photo"
                        name="./photo"
                        required="{Boolean}true" />
                </items>

            </testimonials>

            
        </items>
    </content>
</jcr:root>
